<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/top_background_color"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/top_item_border"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            app:srcCompat="@drawable/ic_product_select_channel" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="16dp"
                                            android:gravity="left|bottom"
                                            android:text=" 通路"
                                            android:textSize="12dp" />

                                        <Spinner
                                            android:id="@+id/spinnerChannelDetail"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="16dp"
                                            android:gravity="left|bottom"
                                            android:text=" 活動"
                                            android:textSize="12dp" />

                                        <Spinner
                                            android:id="@+id/spinnerActivity"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            app:srcCompat="@drawable/ic_product_select_group" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="16dp"
                                            android:gravity="left|bottom"
                                            android:text=" 團體"
                                            android:textSize="12dp" />

                                        <Spinner
                                            android:id="@+id/spinnerGroup"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp" />

                                        <TextView
                                            android:id="@+id/txtTitleChannelDetail"
                                            android:layout_width="match_parent"
                                            android:layout_height="16dp"
                                            android:gravity="left|bottom"
                                            android:text=" 成員"
                                            android:textSize="12dp" />

                                        <Spinner
                                            android:id="@+id/spinnerMember"
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp" />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/viewGroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_background_color"
                    app:tabIndicatorColor="@color/tab_selected_bottomline_color"
                    app:tabRippleColor="@color/tab_touch_back_color"
                    app:tabSelectedTextColor="@color/tab_selected_text_color"
                    app:tabTextColor="@color/tab_text_color" />

            </com.google.android.material.appbar.AppBarLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_item_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
